<Window x:Class="Lektion_12_opg_6_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion_12_opg_6_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StatusBar Margin="0,336,0,0">
            <StatusBarItem x:Name="Status" Content="Status:" Height="98" VerticalAlignment="Center"/>
        </StatusBar>
        <Menu Margin="0,0,0,103">
            <MenuItem x:Name="FileMenu" Header="File" Width="76" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button x:Name="OpenBtn" Content="Open" Click="Btn_Click"/>
                <Button x:Name="SaveBtn" Content="Save as..." Click="Btn_Click"/>
                <Button x:Name="ExitBtn" Content="Exit" Click="Btn_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <Button x:Name="AboutBtn" Content="About" Click="Btn_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
