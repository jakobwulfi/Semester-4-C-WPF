<Window x:Class="Lektion_12_opg_6_6_Dockpanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion_12_opg_6_6_Dockpanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel x:Name="DockPanel" LastChildFill="True" Grid.ColumnSpan="2" Margin="20,20,20,19">
        <Button Content="East" DockPanel.Dock="Right" Width="82" Click="Button_Click"/>
        <Button Content="North" DockPanel.Dock="Top" Height="71" Width="672" Click="Button_Click"/>
        <Button Content="South" DockPanel.Dock="Bottom" Height="85" Width="674" Click="Button_Click"/>
        <Button Content="West" DockPanel.Dock="Left" Width="57" Height="326" Click="Button_Click"/>
        <TextBox x:Name="MyTextBox" TextWrapping="Wrap" Text="" Width="617" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </DockPanel>

</Window>
